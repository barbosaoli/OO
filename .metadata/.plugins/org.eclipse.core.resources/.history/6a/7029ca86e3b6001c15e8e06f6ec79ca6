package testes;

import static org.junit.jupiter.api.Assertions.assertFalse;
import static org.junit.jupiter.api.Assertions.assertTrue;

import org.junit.jupiter.api.Test;

import controller.Validator;
import model.Telefone;

public class Testes {


    @Test
    void testValidaCpf() {
        assertTrue(Validator.validaCpf("22365478954"));  // valido
        assertFalse(Validator.validaCpf("99999999999")); // invalido pelos digitos iguais
        assertFalse(Validator.validaCpf("2365478954"));  // invalido menor que deveria

    }

    @Test
    void testValidaCep() {
        assertTrue(Validator.validaCep(26567587));   // valido
        assertFalse(Validator.validaCep(265675875)); // invalido pela quantidade ser maior
        assertFalse(Validator.validaCep(22222222));  // invalido pelos digitos iguais

    }


    @Test
    void testValidaTelefone() {
        assertTrue(Validator.validaTelefone(new Telefone(61, 555555555)));   // valido
        assertFalse(Validator.validaTelefone(new Telefone(555, 123456789))); // invalido pelo ddd
        assertFalse(Validator.validaTelefone(new Telefone(61, 12345678)));   // invalido pelo numero menor
        assertFalse(Validator.validaTelefone(new Telefone(561, 55555555)));  // invalido pelos dois verificadores

    }
}
