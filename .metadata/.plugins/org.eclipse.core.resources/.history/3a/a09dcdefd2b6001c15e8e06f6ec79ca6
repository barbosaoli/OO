package model;

public class Sale {
    private double value;
    private String name, productName, clientName, nomeArmacao, employeeName;
    private int idVenda;

    public String getApelidoVenda() {
        return name;
    }

    public void setApelidoVenda(String apelidoVenda) {
        this.name = apelidoVenda;
    }

    public int getIdVenda() {
        return idVenda;
    }

    public void setIdVenda(int idVenda) {
        this.idVenda = idVenda;
    }

    public double getValorFinal() {
        return value;
    }

    public void setValorFinal(double valorFinal) {
        this.value = valorFinal;
    }

    public String getNomeLente() {
        return productName;
    }

    public void setNomeLente(String nomeLente) {
        this.productName = nomeLente;
    }

    public String getNomeCliente() {
        return clientName;
    }

    public void setNomeCliente(String nomeCliente) {
        this.clientName = nomeCliente;
    }

    public String getNomeArmacao() {
        return nomeArmacao;
    }

    public void setNomeArmacao(String nomeArmacao) {
        this.nomeArmacao = nomeArmacao;
    }

    public String getNomeFuncionario() {
        return employeeName;
    }

    public void setNomeFuncionario(String nomeFuncionario) {
        this.employeeName = nomeFuncionario;
    }

    public Sale(double valorFinal, String idCliente, String idFuncionario, String idArmacao, String apelidoVenda,
            String idLente, int idVenda) {
        this.value = valorFinal;
        this.clientName = idCliente;
        this.employeeName = idFuncionario;
        this.nomeArmacao = idArmacao;
        this.name = apelidoVenda;
        this.productName = idLente;
        this.idVenda = idVenda;
    }

    // metodo de busca
    public boolean buscaVendaID(int vendaidbuscado) {

        if (idVenda == vendaidbuscado)
            return true;
        else
            return false;
    }

}